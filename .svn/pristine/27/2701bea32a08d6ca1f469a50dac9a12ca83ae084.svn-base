<ion-app>
  <ion-menu side="start" menuId="mobile">
    <ion-header>
      <ion-toolbar color="primary" *ngIf="devWidth < 768">
        <ion-grid>
          <ion-row>
            <ion-col size-xs="3" size-sm="3" style="text-align: left">
              <i class="material-icons" style="zoom: 3;">
                account_circle
              </i>
              <!-- <ion-icon style="zoom: 3;" name="person" size="large"></ion-icon> -->
            </ion-col>
            <ion-col size-xs="9" size-sm="9" class="alignSelfAndCenterAlign">
              <ion-grid class="reducedFontSize">
                <ion-row>
                  <!-- <ion-col size-xs="12" size-sm="12" class="zeroPaddingAndLeftAlign">
                    <ion-label>Milind Rohokale</ion-label>
                  </ion-col>
                  <ion-col size-xs="12" size-sm="12" class="zeroPaddingAndLeftAlign">
                    <ion-label>B1</ion-label>
                  </ion-col> -->
                  <ion-col size-xs="12" size-sm="12" class="zeroPaddingAndLeftAlign">
                    <ion-label>{{email}}</ion-label>
                  </ion-col>
                </ion-row>
              </ion-grid>
            </ion-col>
          </ion-row>

          <ion-row>
            <ion-col size-xs="12" size-sm="12" style="text-align: center">
              <ion-button size="small" color="medium" fill="solid">{{role}}</ion-button>
            </ion-col>
          </ion-row>

        </ion-grid>
      </ion-toolbar>
      <ion-toolbar color="primary" *ngIf="devWidth > 768" class="filterHeader">
        <ion-title>Interviwer Availability Filter</ion-title>
      </ion-toolbar>
    </ion-header>
    <ion-content>
      <ion-list *ngIf="devWidth < 768">
        <ion-menu-toggle auto-hide="false" *ngFor="let p of appPages">
          <ion-item [routerDirection]="'root'" [routerLink]="[p.url]" (click)="raiseEventForToolbar($event,p.url,p.title)">
            <ion-icon slot="start" [name]="p.icon"></ion-icon>
            <ion-label>
              {{p.title}}
            </ion-label>
          </ion-item>
        </ion-menu-toggle>
      </ion-list>
      <div class="container" *ngIf="devWidth > 768">
        <div class="row" style="margin-top: 2%">
          <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <mat-form-field appearance="outline" class="interviewerFilter">
              <mat-select placeholder="Select Interview Type" [(ngModel)]="interviewType" (selectionChange)="selectedInterviewType($event.value)">
                <mat-option value="1">L1</mat-option>
                <mat-option value="2">L2</mat-option>
              </mat-select>
            </mat-form-field>
          </div>
          <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <mat-form-field appearance="outline" class="interviewerFilter">
              <mat-select placeholder="Select Technology" [(ngModel)]="tech" (selectionChange)="selectedTechnology($event.value)">
                <mat-option *ngFor="let tech of technologyArray" [value]="tech.id">{{tech.name}}</mat-option>
              </mat-select>
            </mat-form-field>
          </div>
          <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <mat-form-field appearance="outline" class="interviewerFilter">
              <mat-select placeholder="Select Organization" [(ngModel)]="org" (selectionChange)="selectedBu($event.value)">
                <mat-option *ngFor="let bu of buArray" [value]="bu.id">{{bu.name}}</mat-option>
              </mat-select>
            </mat-form-field>
          </div>
          <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <mat-form-field appearance="outline" class="interviewerFilter">
              <mat-select placeholder="Select Market Unit" [(ngModel)]="market" (selectionChange)="selectedMarketUnit($event.value)">
                <mat-option *ngFor="let mu of marketUnitArray" [value]="mu.id">{{mu.name}}</mat-option>
              </mat-select>
            </mat-form-field>
          </div>
          <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <mat-form-field appearance="outline" class="interviewerFilter">
              <mat-select placeholder="Select Account" [(ngModel)]="accounts" (selectionChange)="selectedAccount($event.value)">
                <mat-option *ngFor="let acc of accountArray" [value]="acc">{{acc.name}}</mat-option>
              </mat-select>
            </mat-form-field>
          </div>
        </div>
      </div>
    </ion-content>
    <ion-footer class="paddingClass" *ngIf="devWidth > 768">
      <h6 *ngIf="filterCount >= 0">
        Filtered Result
        <span [ngStyle]="{color:filterCount > 0 ? 'green':'red'}">{{filterCount}}</span>
      </h6>
      <hr *ngIf="filterCount >= 0">
      <div class="row align-bottom">
        <div class="col-lg-2 col-sm-2 col-md-2">

        </div>
        <div class="col-lg-3 col-sm-3 col-md-3">

            <button class="btn btn-danger" mat-raised-button type="reset" (click)="reset()" style="margin-left: -40%">Reset</button>        
        </div>
        <div class="col-lg-2 col-sm-2 col-md-2">
        </div>
        <div class="col-lg-3 col-sm-3 col-md-3">
          <button class="btn btn-primary" mat-raised-button (click)="applyFilter()" style="margin-left: -22%" >Apply</button>
        </div>
        <div class="col-lg-2 col-sm-2 col-md-2">

        </div>
      </div>
    </ion-footer>
  </ion-menu>
  <ion-router-outlet main></ion-router-outlet>

</ion-app>