$white-color: #fff;
$height100: 100%;
$smartColor:#ff66b3;
$hireColor:#ff66b3;

.background{
    background:url("../../assets/images/landing.jpg");
    background-repeat: no-repeat;
}
ion-grid {
    width:100%;
    height: $height100;
    background: #dfdfdf;
}

ion-row {
    height: $height100;
}

.full-width{
    width: 100%
}

.zeroOpacity{
    opacity: 0;
}
.centreAlign{
    text-align: center;
}
.smart{
    color: $smartColor;
    opacity: 0.8;
}
.hire{
    color: $hireColor;
    opacity: 0.8;
}
h4{
    font-weight: bold;
    background: lightblue;
}
ion-col {
    border: 1px solid #488aff;
    background: $white-color;
}

ion-button {
    font-weight: 300;
}

.noBorder{
    border: none;
}

.boxShadow{
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)
}

.icon{
    margin-top: 0% !important;
    margin-bottom: -7% !important;
    margin-right: 3%;
}

.progressBar{
    padding-top: 0px;
    margin-top: -1%;
}
.registerBtn{
    font-weight: bold;
}

.login,.login:focus{
    background: $smartColor !important;
    border-color: $smartColor;
    border: none;
    box-shadow: none;
    outline: none;
}

.login:hover{
    opacity: 0.7;
}
.reset,.reset:focus{
    background: #3691b0 !important;
    border-color: #3691b0;
    border: none;
    box-shadow: none;
    outline: none;
}

.reset:hover{
    opacity: 0.7;
}

.fontSizeIcon{
    margin-bottom: -5% !important;
    font-size: 24px;
}

@media (min-width: 240px) and (max-width: 768px) {
    ion-grid {
        background: $white-color;
    }
    ion-col {
        border: none;
    }
    .background{
        background: none
    }

    .boxShadow{
        box-shadow: none
    }

    .fontSizeIcon{
        margin-bottom: -5% !important;
        font-size: 24px;
    }
}